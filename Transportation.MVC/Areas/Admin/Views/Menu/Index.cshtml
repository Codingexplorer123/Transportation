@model IEnumerable<Menu>


    <a class="btn btn-primary" asp-action="Create" asp-controller="Menu">Yeni Menu Ekle</a>
<table class="table table-hover">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(p=>p.Id)</th>
            <th>@Html.DisplayNameFor(p=>p.MenuAdi)</th>
            <th>@Html.DisplayNameFor(p=>p.Area)</th>
            <th>@Html.DisplayNameFor(p=>p.Controller)</th>
            <th>@Html.DisplayNameFor(p=>p.Action)</th>
            <th>@Html.DisplayNameFor(p=>p.Class)</th>
            <th>@Html.DisplayNameFor(p=>p.Icon)</th>
            <th>@Html.DisplayNameFor(p=>p.Role.Name)</th>
            <th>Islem</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var menu in Model)
        {
            <tr>
                <td>@menu.Id</td>
                <td>@menu.MenuAdi</td>
                <td>@menu.Area</td>
                <td>@menu.Controller</td>
                <td>@menu.Action</td>
                <td>@menu.Class</td>
                <td>@menu.Icon</td>
                <td>@menu.Role.Name</td>
                <td> <a class="btn btn-info" asp-action="Update" asp-controller="Menu">Guncelle</a> | <a class="btn btn-info" asp-action="Delete" asp-controller="Menu">Sil</a></td>




            </tr>
        }
    </tbody>
</table>